<div class="container">
    <div class="row">
        <% @todos.each_slice(3) do |row| %>
            <% row.each do |todo| %>
                <div class="col">
                    <div class="card">
                        <%= image_tag todo.image, class: 'card-img-top' %>
                        <div class="body">
                            <h5><%= todo.title %></h5>
                            <p><%= todo.description %></p>
                            <% if @total_done.include?(todo.id) %>
                                <%= link_to "Desmarcar!", '#', class: 'btn btn-danger' %>                                
                            <% else %>
                                <%= link_to "Marcar!", todo_checkeds_path(todo), class: 'btn btn-success', method: :post %>
                            <% end %>
                        </div>
                    </div>
                </div>
            <% end %>
        <div class="w-100" style="margin-top-40px"> </div>
        <% end %>
    </div>
</div>
